<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/drawer_layout_act_home"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".ui.home.main.HomeActivity">

    <include layout="@layout/main_content_act_home"
        android:layout_width="match_parent" android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_act_home"
        android:layout_width="@dimen/act_home_nav_width" android:layout_height="match_parent"
        android:layout_gravity="start" android:fitsSystemWindows="true"
        app:headerLayout="@layout/activity_home_nav_header"
        app:itemBackground="@drawable/nav_item_act_home"
        app:menu="@menu/activity_home_nav_menu"
        app:itemIconTint="@color/tint_color_nav_item_act_home"
        app:itemTextColor="@color/text_color_nav_item_act_home"/>

</android.support.v4.widget.DrawerLayout>

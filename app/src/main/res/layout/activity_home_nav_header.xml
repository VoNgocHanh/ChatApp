<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="@dimen/nav_header_height"
    android:theme="@style/WhiteTextTheme">

    <ImageView
        android:id="@+id/image_bg_nav_header_act_home"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_profile_nav_header_act_home"
            android:layout_width="@dimen/photo_profile_width" android:layout_height="@dimen/photo_profile_height"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/username_nav_header_act_home"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/act_home_small_margin"
            android:gravity="center_horizontal"
            android:text="@string/home_act_nav_header_label_username"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/email_user_nav_header_act_home"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/act_home_small_margin"
            android:gravity="center_horizontal"
            android:text="@string/home_act_nav_header_user_email" android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout>
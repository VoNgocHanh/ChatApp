<?xml version="1.0" encoding="utf-8"?>
<!--Use for RecyclerView in SearchingUserActivity-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_icon_founded_user_item"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="8dip" android:layout_marginEnd="6dip"/>

    <TextView
        android:id="@+id/email_user_founded_user_item"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textSize="14sp" android:textColor="@android:color/black"/>

</LinearLayout>
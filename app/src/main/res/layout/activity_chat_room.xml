<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.room.chat_room.Activity">

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toLeftOf="@+id/messageSend"
        android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/messageSend"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
        android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
        android:text="SEND" android:textSize="16sp"/>

    <ListView
        android:id="@+id/chatFrame"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_above="@+id/messageInput"
        android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
        android:layout_marginBottom="10dip"
        android:dividerHeight="1dip" android:divider="@android:color/darker_gray"/>

</RelativeLayout>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteTextTheme" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="FieldSignupStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <!--SIGNIN ACTIVITY-->
    <style name="ShowPasswordChk_Signin" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:button">@drawable/show_password_custom_state</item>
    </style>
    
    <!--HOME ACTIVITY-->
    <style name="HomeActivityToolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/orange_700</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
